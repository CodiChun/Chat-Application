<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView_roominfo_roomname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_roominfo_memberlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_roominfo_roomname"
        android:layout_above="@+id/button_roominfo_addmember"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_roominfo_addmember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add member"
        android:layout_margin="16dp"
        android:layout_above="@+id/backToChatRoomButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/backToChatRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Chat Room"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
