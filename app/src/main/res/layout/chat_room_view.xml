<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageview_chatroomview_profile"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_chatroomview_name"
        android:layout_toEndOf="@id/imageview_chatroomview_profile"
        android:textColor="?colorPrimary"
        android:textSize="20dp"
        tools:text="Name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_chatroomview_message"
        android:layout_toEndOf="@id/imageview_chatroomview_profile"
        android:layout_below="@id/textview_chatroomview_name"
        android:textColor="?colorSecondary"
        tools:text="Last Massage"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imageview_chatroomview_profile"
        android:layout_marginTop="10dp"
        android:background="?android:colorBackground"
        />

</RelativeLayout>