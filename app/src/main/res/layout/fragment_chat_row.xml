    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imageview_chatroomview_profile"
        android:layout_marginTop="10dp"
        android:background="?colorBackgroundFloating"
        />

</RelativeLayout>